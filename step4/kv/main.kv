FloatLayout
    id: root_widget
    BoxLayout
        size_hint: None, None
        size: dp(400), dp(200)
        padding: dp(20), dp(20)
        spacing: dp(20)
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: 'vertical'
        GridLayout
            spacing: dp(20) 
            rows: 2
            cols: 2
            Label
                text: 'User Name'
            TextInput
                id: ti_user
                multiline: False
            Label
                text: 'password'
            TextInput
                id: ti_password
                password: True
                multiline: False
        Button
            text: 'OK'
            size_hint_y: None
            height: dp(48)
            on_release: app.check_user(ti_user.text, ti_password.text)
